<div class="container">


<div class="header2">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
				                        <%= image_tag("Money.png", class: "img-responsive middle") %> 
				                        <h1 class="boardtitle" style="color: black">TopDollar Wallet</h1>
				                         <hr class="star-primary">
				       </div>
				       </div>
				       </div>
				    </div>

	<div class="row">
		<div class="col-lg-6">
			 <div class="panel panel-primary">
      		<div class="panel-heading"><b>TopDog Total Balance</b></div>
      		<div class="panel-body"><h1 style="text-align: center"><b>$<%= @final %></b></h1>
      		<h5 style="text-align: center">Your TopDollar Total for the Beta</h5>
    		</div>
    		</div>
		</div>
		<div class="col-lg-6">
			 <div class="panel panel-primary">
      		<div class="panel-heading"><b>Referrals: Get 5 TopDollars for Every Signup</b></div>
      		<div class="panel-body">
      			<h4><b>Share:</b></h4>
      			<h4>http://www.topdogtrivia.com/stack?username=<%= User.where(id: current_user).last.username %></h4>
      			<h6>(Your TopDollar total will go up after 24 hours</h6>
    		</div>
    		</div>
		</div>
	</div>


	<table class="table table-striped">
		<thead>
			<tr>
				<th>Game</th>
				<th>Chips</th>
				<th>Game Date</th>
			</tr>
		</thead>
		<tbody>
			<% @stack.each do |stack| %>
			<tr>
			 	<td><%= stack.game_id %></td>
			 	<td><%= stack.chips %></td>
			 	<td><%= stack.game.name %></td>
			 <% end %>
			 	
			</tr>
		</tbody>
	</table>
	</div>
	<!-- end panel table --> 

</div>