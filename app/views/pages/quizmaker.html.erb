<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Question</th>
        <th>Answers</th>
        <th>Correcta</th>
        <th>Quiz Date</th>
        <th>Category</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @histories.each do |history| %>
        <tr>
          <td><%= history.question %></td>
          <td><%= history.answers %></td>
          <td><%= history.correcta %></td>
          <td><%= history.quizdate %></td>
          <td><%= history.category %></td>
          <td><%= link_to 'Show', history %></td>
          <td><%= link_to 'Edit', edit_history_path(history) %></td>
          <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
    <a class="btn btn-primary btn-lg" <%= link_to "Enter New Questions", new_history_path %> </a>
</div>

<br>