<div class="container">

<h1>QuestionMaker: Listing Games</h1>

<!-- demo table --> 

         <table class="table table-striped table-hover table-condensed">
                      <thead>
                        <tr>
                          <th class="mobiletablehide">Rank</th>
                          <th>Game</th>
                          <th>Start Time</th>
                          <th>Game Entry</th>
                          <th>Prize</th>
                        </tr>
                      </thead>
                      <tbody>
                      <% @games.each_with_index do |game, index| %>
                        <tr>
                          <td class="mobiletablehide"><%= index + 1 %></td>
                          <td><%= game.name %></td>
                           <td><%= game.starts_at %></td>
                           <td>$<%= game.entry %>0</td>
                          <td>
                                 <%= link_to "Questions &raquo;".html_safe, gamequestion_path(id: game.id), class: "btn btn-primary btn-md" %>
                                </td>
                          <% end %>
                        </tr>
                      </tbody>
                    </table>

</div>
