<%= form_for(@history) do |f| %>
  <% if @history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@history.errors.count, "error") %> prohibited this history from being saved:</h2>

      <ul>
      <% @history.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <div class="field">
    <%= f.label :question %><br>
    <%= f.text_field :question, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :answers %><br>
    <%= f.text_field :answers, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :correcta %><br>
    <%= f.number_field :correcta, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :quizdate %><br>
    <%= f.date_select :quizdate, class: "form-control"%>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :topic %><br>
    <%= f.text_field :topic, class: "form-control", placeholder: "Major Topic (e.g. Sports)" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category, class: "form-control", placeholder: "# Category (e.g. Sports 1)"  %>
  </div>
</div>

<div class="form-group">
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg submitquestion" %>
  </div>
</div>
<% end %>

